<h2><%= @celebrity.screen_name %></h2>
<br>

<hr>

<% if current_user %>
  <%= link_to "Synchornize", { controller: 'celebrities', action: 'sync' },
              id: @celebrity.id, :class => 'btn-primary btn-small' %>
<% end %>

<hr>

<% @posts.each do |p| %>
  <div>
    <div><%= p.content %></div>
    <% if p.retweeted_content %>
      <div>&nbsp;&nbsp;&nbsp;&nbsp;<%= p.retweeted_content %></div>
    <% end %>
    <% if p.picture %>
      <img src="<%= p.picture %>", height='300px'/>
    <% end %>
    <br>
    <%= p.post_time %>
    <br>
    <br>
  </div>

  <hr>
<% end %>